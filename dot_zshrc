# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Prefer portable paths (Intel + Apple Silicon) and avoid hard-coding $HOME.
typeset -U path PATH

HOMEBREW_PREFIX=""
if command -v brew >/dev/null 2>&1; then
  HOMEBREW_PREFIX="$(brew --prefix)"
fi

# Try to fix git gpg key prompt
export GPG_TTY=$(tty)

# Enable iterm2 shell integration
export ITERM2_SQUELCH_MARK=1
[[ -r "$HOME/.iterm2_shell_integration.zsh" ]] && source "$HOME/.iterm2_shell_integration.zsh"

# Use Neovim for dipplaying man pages
export MANPAGER='nvim +Man!'

# .Net interactive
path+=("$HOME/.dotnet/tools")

# Homebrew binaries (works for /usr/local and /opt/homebrew)
if [[ -n "$HOMEBREW_PREFIX" ]]; then
  [[ -d "$HOMEBREW_PREFIX/sbin" ]] && path+=("$HOMEBREW_PREFIX/sbin")
fi

# Use Ruby from Homebrew instead of the macOS one (if installed)
if [[ -n "$HOMEBREW_PREFIX" && -d "$HOMEBREW_PREFIX/opt/ruby/bin" ]]; then
  path=("$HOMEBREW_PREFIX/opt/ruby/bin" $path)
fi

# Add nvim site path for plugins
path+=("$HOME/.local/share/nvim/site/")

# Alias for logging in to PW laboratories server
alias volt="ssh dabrowk1@volt.iem.pw.edu.pl"

# Update all pip3 packages
alias pip3-upgrade="pip3 list --outdated --format=freeze | cut -d = -f 1 | xargs -n1 pip3 install -U"

# Activate venv
alias venv-activate="source ./venv/bin/activate"

chezmoi-cd() {
    cd $(chezmoi source-path)
}

# Opt out of .Net telemetry
export DOTNET_INTERACTIVE_CLI_TELEMETRY_OPTOUT=1

